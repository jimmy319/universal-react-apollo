{
  "name": "universal-react-apollo",
  "version": "2.0.0",
  "description": "Lightweight wrapper library around react-apollo and apollo-server-express to build universal (isomorphic) app with less boilerplate",
  "main": "universal-react-apollo.cjs.js",
  "module": "universal-react-apollo.esm.js",
  "scripts": {
    "pre-build": "rimraf lib",
    "build": "rollup -c",
    "test": "jest"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jimmy319/universal-react-apollo.git"
  },
  "keywords": [
    "react",
    "apollo",
    "graphql",
    "universal",
    "isomorphic",
    "ssr"
  ],
  "author": "jimmy74319@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jimmy319/universal-react-apollo/issues"
  },
  "homepage": "https://github.com/jimmy319/universal-react-apollo#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "peerDependencies": {
    "@apollo/client": "^3.3.16",
    "apollo-server-express": "^3.0.0",
    "express": "^4.17.0",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "graphql": "^14.3.1",
    "@graphql-tools/schema": "^7.0.0"
  },
  "devDependencies": {
    "@apollo/client": "^3.3.16",
    "@babel/core": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.5.5",
    "apollo-server-express": "^3.0.0",
    "babel-loader": "^8.0.6",
    "express": "^4.17.0",
    "graphql": "^14.3.1",
    "@graphql-tools/schema": "^8.2.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "rollup": "^1.12.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^5.0.0",
    "webpack": "^5.36.2",
    "webpack-dev-middleware": "^4.1.0"
  }
}
